extends ../../layout/page

//--------------------------------------------------//

block vars
  - var title = 'media'
  - var description = 'media'

//--------------------------------------------------//

block head
  +style('media')

block startBody
  +header()
 
block endBody
  +footer()
  +script('main')
  //- +script('media')

//--------------------------------------------------//

mixin newsCard(title,text)
  +b.news-card
    +e.title!=title
    +e.text!=text
    +e.A.link.btn(href="#")
      span.btn__text Читать статью

block content
  +b.media.wrapper
