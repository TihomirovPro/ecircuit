extends ../../layout/page

//--------------------------------------------------//

block vars
  - var title = 'index'
  - var description = 'index'
  - var pageId = 'indexPage'

//--------------------------------------------------//

block head
  +style('swiper')
  +style('index')

block startBody
  +header()
 
block endBody
  +footer()
  +script('main')
  +script('swiper')

//--------------------------------------------------//

mixin workCard(num,title,text)
  +b.workCard
    +e.P.num!=num
    +e.P.title!=title
    +e.P.text!=text

mixin categoryCard(icon,title)
  +b.categoryCard
    +e.IMG.icon.img(src=icon alt='')
    +e.title!=title

mixin freshCard(title,price,quantity,offers,time)
  +b.freshCard
    +e.P.status
      +e.SVG.icon(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14")
        path(fill="#4BDD8E" d="M12.62.44a1.04 1.04 0 00-.82-.17c-.14.04-.27.1-.39.18-.12.1-.22.2-.3.33L5.06 10.86 2.09 7.9a1.01 1.01 0 00-.78-.3c-.29 0-.56.14-.75.36a1.22 1.22 0 00.06 1.65L4.5 13.5l.17.14a1.04 1.04 0 00.81.16c.14-.03.27-.09.39-.18.12-.08.22-.2.3-.32l6.76-11.24a1.22 1.22 0 00.16-.88 1.21 1.21 0 00-.47-.73z")
      span Открыт
    +e.P.title!=title
    +e.price
      p!=price
      p!=quantity
    +e.offers
      p!=offers
      p!=time

mixin faq(title,text)
  +e.LI.item.swiper-slide
    +e.P.title!=title
    +e.P.text!=text

